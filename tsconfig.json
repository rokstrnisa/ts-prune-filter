{
    "compilerOptions": {
        "target": "ES2017",
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": ["*.ts"],
    "exclude": ["node_modules"]
}
